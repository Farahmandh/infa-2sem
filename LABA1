упражнение 1

#include <iostream>

int main() {
std::cout << "mipt" << 2016 << '.' << true << std::endl;
return 0;
}

упражнение 2

#include <iostream>
#include <cmath>

int main() {
int a, b;
std::cin >> a >> b;
std::cout << sqrt( a*a + b*b);
return 0;
}

упражнение 3

#include <iostream>

int main() {
int n;
std::cin >> n;
for(int i=0; i < n; i++){
for(int j=0; j < n; j++){
std::cout << '*';
}
std::cout << '\n';
}
}

упражнение 4

#include <iostream>

int main() {
int n;
std::cin >> n;
for(int i=0; i < n; i++){
for(int j=i; j < n; j++){
std::cout << '*';
}
std::cout << '\n';
}
}

упражнение 5

#include <iostream>

int main() {
int n;
std::cin >> n;
for(int i=n; i > 0; i--){
for(int j=i; j <= n; j++){
std::cout << '*';
}
std::cout << '\n';
}
}

